    <sql id="Activity_detail_List">

    </sql>

    <select id="getAllActivity" resultMap="ActivityBaseVOMap">
        SELECT
          <include refid="Activity_Base_Info_List"/>
        FROM
          activity LEFT JOIN comment on activity.activity_id= comment.activity_id
                   LEFT JOIN agree on activity.activity_id= agree.activity_id,
          user,tags
        WHERE activity.creator=user.user_id AND activity.tag_id= tags.tag_id
    </select>

